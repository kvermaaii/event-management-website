<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Dashboard</title>
  <link rel="stylesheet" href="/css/common.css">
  <link rel="stylesheet" href="/css/navbar.css">
  <link rel="stylesheet" href="/css/user_dashboard.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
  <!-- Include navbar -->
  <%- include('partials/navbar') %>

  <!-- Dashboard starts here, directly after navbar -->
  <div class="dashboard-container">
    <!-- Gradient blobs for background design -->
    <div class="gradient-blob blob-1"></div>
    <div class="gradient-blob blob-2"></div>
    <div class="gradient-blob blob-3"></div>
    
    <!-- Dashboard content -->
    <div class="dashboard-content">
      <!-- Sidebar -->
      <div class="sidebar">
        <div class="user-info">
          <div class="profile-image">
            <img src="/images/guest.png" alt="Profile Picture">
          </div>

          <h3>John Doe</h3>
          <p>@johndoe123</p>
        </div>
        
        <nav class="sidebar-nav">
          <ul>
            <li class="active" data-section="bookings">
              <i class="fas fa-ticket-alt"></i> My Bookings
            </li>
            <li data-section="profile">
              <i class="fas fa-user"></i> Profile
            </li>
            <li data-section="saved">
              <i class="fas fa-bookmark"></i> Saved Events
            </li>
            <li>
              <i class="fas fa-sign-out-alt"></i> <a href="/logout">Logout</a>
            </li>
          </ul>
        </nav>
      </div>
      
      <!-- Main Content Area -->
      <div class="main-content">
        <!-- Bookings Section -->
        <section id="bookings" class="dashboard-section active">
          <h2>My Bookings</h2>
          
          <div class="booking-filters">
            <button class="filter-btn active" data-filter="all">All</button>
            <button class="filter-btn" data-filter="upcoming">Upcoming</button>
            <button class="filter-btn" data-filter="completed">Completed</button>
            <button class="filter-btn" data-filter="cancelled">Cancelled</button>
          </div>
          
          <div class="bookings-list">
           
            <!-- Sample booking cards for preview -->
            <div class="booking-card upcoming">
              <div class="booking-header">
                <h3>Tech Conference 2025</h3>
                <span class="status-badge upcoming">upcoming</span>
              </div>
              
              <div class="booking-details">
                <div class="detail-item">
                  <i class="fas fa-calendar"></i>
                  <span>April 15, 2025</span>
                </div>
                <div class="detail-item">
                  <i class="fas fa-clock"></i>
                  <span>9:00 AM</span>
                </div>
                <div class="detail-item">
                  <i class="fas fa-map-marker-alt"></i>
                  <span>Convention Center, San Francisco</span>
                </div>
                <div class="detail-item">
                  <i class="fas fa-ticket-alt"></i>
                  <span>VIP Pass</span>
                </div>
                <div class="detail-item">
                  <i class="fas fa-money-bill-wave"></i>
                  <span>$75.00</span>
                </div>
              </div>
              
              <div class="booking-actions">
                <button class="btn view-details">View Details</button>
                <button class="btn cancel-booking">Cancel Booking</button>
              </div>
            </div>

            <div class="booking-card completed">
              <div class="booking-header">
                <h3>Music Festival</h3>
                <span class="status-badge completed">completed</span>
              </div>
              
              <div class="booking-details">
                <div class="detail-item">
                  <i class="fas fa-calendar"></i>
                  <span>March 10, 2025</span>
                </div>
                <div class="detail-item">
                  <i class="fas fa-clock"></i>
                  <span>4:00 PM</span>
                </div>
                <div class="detail-item">
                  <i class="fas fa-map-marker-alt"></i>
                  <span>Central Park, New York</span>
                </div>
                <div class="detail-item">
                  <i class="fas fa-ticket-alt"></i>
                  <span>Weekend Pass</span>
                </div>
                <div class="detail-item">
                  <i class="fas fa-money-bill-wave"></i>
                  <span>$120.00</span>
                </div>
              </div>
              
              <div class="booking-actions">
                <button class="btn view-details">View Details</button>
              </div>
            </div>

            <div class="booking-card cancelled">
              <div class="booking-header">
                <h3>Business Workshop</h3>
                <span class="status-badge cancelled">cancelled</span>
              </div>
              
              <div class="booking-details">
                <div class="detail-item">
                  <i class="fas fa-calendar"></i>
                  <span>February 20, 2025</span>
                </div>
                <div class="detail-item">
                  <i class="fas fa-clock"></i>
                  <span>10:00 AM</span>
                </div>
                <div class="detail-item">
                  <i class="fas fa-map-marker-alt"></i>
                  <span>Business Center, Chicago</span>
                </div>
                <div class="detail-item">
                  <i class="fas fa-ticket-alt"></i>
                  <span>Standard</span>
                </div>
                <div class="detail-item">
                  <i class="fas fa-money-bill-wave"></i>
                  <span>$45.00</span>
                </div>
              </div>
              
              <div class="booking-actions">
                <button class="btn view-details">View Details</button>
              </div>
            </div>
          </div>
        </section>
        
        <!-- Profile Section -->
        <section id="profile" class="dashboard-section">
          <h2>My Profile</h2>
          
          <div class="profile-container">
            <form id="profile-form" class="profile-form">
              <div class="form-row">
                <div class="form-group">
                  <label for="firstName">First Name</label>
                  <input type="text" id="firstName" name="firstName" value="John">
                </div>
                <div class="form-group">
                  <label for="lastName">Last Name</label>
                  <input type="text" id="lastName" name="lastName" value="Doe">
                </div>
              </div>
              
              <div class="form-row">
                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="email" id="email" name="email" value="shriansh.j23@iiits.in" disabled>
                </div>
                <div class="form-group">
                  <label for="phone">Phone</label>
                  <input type="text" id="phone" name="phone" value="+91 8310236848">
                </div>
              </div>
              
              <div class="form-row">
                <div class="form-group">
                  <label for="username">Username</label>
                  <input type="text" id="username" name="username" value="Shriansh">
                </div>
                <div class="form-group">
                  <label for="dateOfBirth">Date of Birth</label>
                  <input type="date" id="dateOfBirth" name="dateOfBirth" value="2005-08-08">
                </div>
              </div>
              
              <div class="form-actions">
                <button type="submit" class="btn save-profile">Save Changes</button>
              </div>
            </form>
            
            <div class="password-section">
              <h3>Change Password</h3>
              <form id="password-form" class="password-form">
                <div class="form-group">
                  <label for="currentPassword">Current Password</label>
                  <input type="password" id="currentPassword" name="currentPassword">
                </div>
                <div class="form-group">
                  <label for="newPassword">New Password</label>
                  <input type="password" id="newPassword" name="newPassword">
                </div>
                <div class="form-group">
                  <label for="confirmPassword">Confirm New Password</label>
                  <input type="password" id="confirmPassword" name="confirmPassword">
                </div>
                <div class="form-actions">
                  <button type="submit" class="btn change-password">Update Password</button>
                </div>
              </form>
            </div>
          </div>
        </section>
        
        <!-- Saved Events Section -->
        <section id="saved" class="dashboard-section">
          <h2>Saved Events</h2>
          
          <div class="saved-events-list">
            <!-- This would be populated with actual saved events from the database -->
            <div class="no-saved-events">
              <p>You don't have any saved events yet.</p>
              <a href="/" class="btn explore-events">Explore Events</a>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
  <script src="/js/navbar.js"></script>
  <script src="/js/user_dashboard.js"></script>
</body>
</html>