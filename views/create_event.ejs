<style>
  .wide-form {
    width: 700px;
  }
</style>

<div class="form-container wide-form">
  <form method="POST" action="/organizer/events" enctype="multipart/form-data" class="full-width-form">
    <h1 style="text-align: center;">Create Event</h1>

    <div class="form-group">
      <label for="category">Category</label>
      <select class="form-control" id="category" name="category" required>
        <option>Concerts</option>
        <option>Exhibitions</option>
        <option>TEDx</option>
        <option>Health Camps</option>
      </select>
    </div>

    <div class="form-group">
      <label for="title">Title</label>
      <input
        type="text"
        class="form-control"
        id="title"
        name="title"
        placeholder="Enter event title"
        maxlength="100"
        required
      />
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <textarea
        class="form-control"
        id="description"
        name="description"
        placeholder="Enter event description"
        maxlength="1000"
        required
      ></textarea>
    </div>

    <div class="form-group">
      <label for="startDateTime">Start Date Time</label>
      <input
        type="datetime-local"
        class="form-control"
        id="startDateTime"
        name="startDateTime"
        required
      />
    </div>

    <div class="form-group">
      <label for="endDateTime">End Date Time</label>
      <input
        type="datetime-local"
        class="form-control"
        id="endDateTime"
        name="endDateTime"
        required
      />
      <small id="endDateError" style="color: red; display: none;">
        End Date Time must be later than Start Date Time.
      </small>
    </div>

    <div class="form-group">
      <label for="venue">Venue</label>
      <input
        type="text"
        class="form-control"
        id="venue"
        name="venue"
        placeholder="Enter event venue"
        maxlength="200"
        required
      />
    </div>

    <div class="form-group">
      <label for="capacity">Capacity</label>
      <input
        type="number"
        class="form-control"
        id="capacity"
        name="capacity"
        placeholder="Enter event capacity"
        min="1"
        max="100000"
        required
      />
    </div>

    <div class="form-group">
      <label for="price">Price</label>
      <input
        type="number"
        class="form-control"
        id="price"
        name="price"
        placeholder="Enter event price"
        min="0"
        step="0.01"
        required
      />
    </div>

    <div class="form-group">
      <label for="status">Status</label>
      <select class="form-control" id="status" name="status" required>
        <option value="start_selling">Start Selling</option>
        <option value="not_selling">Not Selling</option>
      </select>
    </div>

    <div class="form-group">
      <label for="image">Event Image</label>
      <input
        type="file"
        class="form-control"
        id="image"
        name="image"
        accept="image/*"
        required
      />
    </div>

    <br />
    <button type="submit" class="submit-btn form-submit-btn">Submit</button>
    <script>
      const startDateTimeInput = document.getElementById('startDateTime');
      const endDateTimeInput = document.getElementById('endDateTime');
      const endDateError = document.getElementById('endDateError');
    
      // Add real-time validation for endDateTime
      endDateTimeInput.addEventListener('input', () => {
        const startDateTime = new Date(startDateTimeInput.value);
        const endDateTime = new Date(endDateTimeInput.value);
    
        // Show error if endDateTime is less than or equal to startDateTime
        if (startDateTimeInput.value && endDateTime <= startDateTime) {
          endDateError.style.display = 'inline';
        } else {
          endDateError.style.display = 'none';
        }
      });
    
      // Optional: Prevent form submission if the error is visible
      const form = document.querySelector('form');
      form.addEventListener('submit', (e) => {
        if (endDateError.style.display === 'inline') {
          alert('Please fix the errors before submitting the form.');
          e.preventDefault(); // Prevent form submission
        }
      });
    </script>
  </form>
</div>
